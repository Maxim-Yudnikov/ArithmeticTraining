<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Length: "
            android:textSize="20sp" />

        <EditText
            android:id="@+id/lengthEditText"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:hint="Min 3"
            android:inputType="numberSigned"
            android:maxLength="1" />

        <TextView
            android:id="@+id/diffTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:textSize="20sp"
            tools:text="Hard" />

        <Button
            android:id="@+id/changeDifficultyButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change difficulty" />

        <Button
            android:id="@+id/startButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="5dp"
            android:text="Start" />

    </LinearLayout>

    <TextView
        android:id="@+id/singleTextView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textSize="62sp"
        android:visibility="gone"
        tools:text="3" />

    <TextView
        android:id="@+id/ruleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:textSize="20sp"
        android:visibility="gone"
        tools:text="Do something" />

    <EditText
        android:id="@+id/inputNumberEditText"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="300dp"
        android:hint="Enter a number"
        android:inputType="numberSigned"
        android:maxLength="9"
        android:visibility="gone" />

</LinearLayout>